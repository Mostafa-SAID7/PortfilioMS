@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName" 
      dir="@(System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ar" ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <!-- Theme Switcher -->
    <div class="theme-switcher">
        <button class="theme-btn theme-light active" data-theme="light" title="@Localizer["LightTheme"]"></button>
        <button class="theme-btn theme-dark" data-theme="dark" title="@Localizer["DarkTheme"]"></button>
        <button class="theme-btn theme-blue" data-theme="blue" title="@Localizer["BlueTheme"]"></button>
        <button class="theme-btn theme-green" data-theme="green" title="@Localizer["GreenTheme"]"></button>
    </div>

    <!-- Language Switcher -->
    <div class="language-switcher">
        <button class="lang-btn @(System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "en" ? "active" : "")" 
                data-lang="en">EN</button>
        <button class="lang-btn @(System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "ar" ? "active" : "")" 
                data-lang="ar">AR</button>
        <button class="lang-btn @(System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "fr" ? "active" : "")" 
                data-lang="fr">FR</button>
        <button class="lang-btn @(System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "es" ? "active" : "")" 
                data-lang="es">ES</button>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">Portfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">@Localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/About">@Localizer["About"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Projects">@Localizer["Projects"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Skills">@Localizer["Skills"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Blog">@Localizer["Blog"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Contact">@Localizer["Contact"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>@Localizer["About"]</h5>
                    <p>@Localizer["FooterAboutText"]</p>
                </div>
                <div class="col-md-4">
                    <h5>@Localizer["QuickLinks"]</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">@Localizer["Home"]</a></li>
                        <li><a href="/Projects">@Localizer["Projects"]</a></li>
                        <li><a href="/Contact">@Localizer["Contact"]</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>@Localizer["FollowMe"]</h5>
                    <div class="social-links">
                        <a href="#" target="_blank"><i class="fab fa-github"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-linkedin"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <p>&copy; @DateTime.Now.Year - @Localizer["AllRightsReserved"]</p>
            </div>
        </div>
    </footer>

    <!-- Chat Widget -->
    <button class="chat-toggle-btn" id="chatToggle">
        <i class="fas fa-comments"></i>
    </button>

    <div class="chat-widget" id="chatWidget">
        <div class="chat-header">
            <div>
                <h4 style="margin: 0;">@Localizer["LiveChat"]</h4>
                <small>@Localizer["ChatSubtitle"]</small>
            </div>
            <button id="chatClose" style="background: transparent; border: none; color: white; font-size: 24px; cursor: pointer;">×</button>
        </div>
        <div class="chat-messages" id="chatMessages">
            <div class="message admin">
                <strong>@Localizer["Support"]</strong><br>
                @Localizer["ChatWelcomeMessage"]
            </div>
        </div>
        <div class="chat-input-area">
            <input type="text" class="chat-input" id="chatInput" placeholder="@Localizer["TypeMessage"]">
            <button class="chat-send-btn" id="chatSend">@Localizer["Send"]</button>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>