@model IEnumerable<PortfilioMS.Models.ViewModels.SkillViewModel>

@{
    ViewData["Title"] = "Skills";
}

<h2>Skills</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Skill</a>
</p>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Proficiency</th>
            <th>Years</th>
            <th>Featured</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var skill in Model)
    {
        <tr>
            <td>@skill.Name</td>
            <td>@skill.Category</td>
            <td>@skill.ProficiencyLevel%</td>
            <td>@skill.YearsOfExperience</td>
            <td>@(skill.IsFeatured ? "Yes" : "No")</td>
            <td>@(skill.IsActive ? "Yes" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@skill.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@skill.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@skill.Id" class="btn btn-sm btn-danger">Delete</a>
                <form asp-action="ToggleStatus" asp-route-id="@skill.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-secondary">Toggle</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
