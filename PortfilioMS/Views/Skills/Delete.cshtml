@model PortfilioMS.Models.ViewModels.SkillViewModel

<h2>Delete Skill</h2>

<h4>Are you sure you want to delete this skill?</h4>
<div>
    <strong>@Model.Name</strong> - @Model.Category
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
